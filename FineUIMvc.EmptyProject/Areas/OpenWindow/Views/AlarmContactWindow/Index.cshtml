@{
    ViewBag.Title = "OpenWindow/AlarmContactWindow";
    var F = @Html.F();
}

@section body {
    @(F.Panel()
         .ID("Panel1")
         .ShowBorder(false)
         .ShowHeader(false)
         .Margin(5)
         .BodyPadding(5)
         .Layout(LayoutType.VBox)
         .BoxConfigAlign(BoxLayoutAlign.Stretch)
         .IsViewPort(true)
         .Items(
                  F.Grid()
                       .EnableCollapse(true)
                       .Title("表格")
                       .ShowHeader(false)
                       .ShowBorder(true)
                       .ID("Grid1")
                       .DataIDField("ID")
                       .DataTextField("FName")
                       .EnableTextSelection(true)
                       .EnableCheckBoxSelect(true)
                       .EnableMultiSelect(true)
                       .CheckBoxSelectOnly(true)
                       .AutoScroll(true)
                       .BoxFlex(1)
                       .Toolbars(
                           F.Toolbar()
                                  .ID("Toolbar1")
                                  .Items(
                                      F.Button()
                                       .ID("btnClose")
                                       .Icon(Icon.SystemClose)
                                       .Text("关闭")
                                       .Listener("click", "F.activeWindow.hide();"),
                                      F.HiddenField()
                                       .ID("baseId")
                                       .Text(ViewBag.FCustomerID),
                                      F.HiddenField()
                                       .ID("typeId")
                                       .Text(ViewBag.type),
                                      F.ToolbarFill()
                                       .ID("ToolbarFill1"),
                                      F.Button()
                                       .ID("btnSaveClose")
                                       .Icon(Icon.SystemSaveClose)
                                       .Listener("click", "onSaveCloseClick")
                                       .Text("保存后关闭")
                                  )
                       )
                       .Columns(
                               F.RowNumberField(),
                               F.RenderField()
                                    .HeaderText("联系人组名称")
                                    .DataField("FName")
                                    .Width(100),
                               F.RenderField()
                                    .HeaderText("组报警联系人")
                                    .DataField("Contacts")
                                    .Width(200),
                               F.RenderField()
                                    .HeaderText("备注")
                                    .DataField("FNote")
                                    .Width(200)
                              )
                       .DataSource(ViewBag.Grid1DataSource)
                       .SelectedRowIDArray(ViewBag.GridSelectedRow)
         )
    )

}

@section script {

    <script src="~/res/js/grid.js"></script>

    <script>
        function onSaveCloseClick(event) {
            var grid = F.ui.Grid1;

            if (!grid.hasSelection()) {
                F.alert('没有选中项！');
                return;
            }

            var idList = "";
            var textList = "";
            $.each(grid.getSelectedRows(true), function (index, row) {
                idList = idList + row.id + ',';
                textList = textList + row.text + ',';
            })
            idList = idList.substring(0, idList.length - 1);
            textList = textList.substring(0, textList.length - 1);
            var activeWindow = F.getActiveWindow();
            activeWindow.window.updateContactGroup(idList, textList);
            activeWindow.hide();
        }
    </script>
}
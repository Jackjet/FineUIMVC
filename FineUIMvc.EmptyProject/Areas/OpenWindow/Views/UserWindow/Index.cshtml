@{
    ViewBag.Title = "OpenWindow/UserWindow";
    var F = @Html.F();
}

@section head {

    <style>
        #tbSelectedUser-inputEl {
            white-space: normal;
            word-break: break-all;
        }
    </style>

}

@section body {
    @(F.Panel()
         .ID("Panel1")
         .ShowBorder(false)
         .ShowHeader(false)
         .BodyPadding(5)
         .Layout(LayoutType.VBox)
         .BoxConfigAlign(BoxLayoutAlign.Stretch)
         .IsViewPort(true)
         .Toolbars(
                F.Toolbar()
                       .ID("Toolbar1")
                       .Items(
                           F.Button()
                            .ID("btnClose")
                            .Icon(Icon.SystemClose)
                            .Text("关闭")
                            .Listener("click", "F.activeWindow.hide();"),
                           F.Button()
                            .ID("btnSaveClose")
                            .Icon(Icon.SystemSaveClose)
                            .Listener("click", "onSaveCloseClick")
                            .Text("保存后关闭"),
                           F.ToolbarFill()
                            .ID("ToolbarFill1")
                       )
                 )
         .Items(
                  F.Form()
                       .ID("Form3")
                       .ShowHeader(false)
                       .ShowBorder(false)
                       .LabelAlign(LabelAlign.Left)
                       .Rows(
                          F.FormRow()
                               .ID("FormRow2")
                               .Items(
                                  F.TwinTriggerBox()
                                         .ID("ttbSearchMessage")
                                         .ShowLabel(false)
                                         .EmptyText("在用户名称中搜索")
                                         .Trigger1Icon(TriggerIcon.Clear)
                                         .Trigger2Icon(TriggerIcon.Search)
                                         .ShowTrigger1(false)
                                         .Listener("trigger1click", "Grid1_DoPostBack('trigger1');")
                                         .Listener("trigger2click", "Grid1_DoPostBack('trigger2');"),
                                  F.TwinTriggerBox()
                                         .ID("ttbSearchCustomer")
                                         .ShowLabel(false)
                                         .EmptyText("在所属客户中搜索")
                                         .Trigger1Icon(TriggerIcon.Clear)
                                         .Trigger2Icon(TriggerIcon.Search)
                                         .ShowTrigger1(false)
                                         .Listener("trigger1click", "Grid1_DoPostBack('trigger1');")
                                         .Listener("trigger2click", "Grid1_DoPostBack('trigger3');"),
                                  F.TwinTriggerBox()
                                         .ID("ttbSearchCompany")
                                         .ShowLabel(false)
                                         .EmptyText("在所属分公司中搜索")
                                         .Trigger1Icon(TriggerIcon.Clear)
                                         .Trigger2Icon(TriggerIcon.Search)
                                         .ShowTrigger1(false)
                                         .Listener("trigger1click", "Grid1_DoPostBack('trigger1');")
                                         .Listener("trigger2click", "Grid1_DoPostBack('trigger4');"),
                                   F.HiddenField()
                                         .ID("txtUserType")
                                         .Text(ViewBag.type),
                                   F.Label()
                               )
                       ),
                  F.Grid()
                       .EnableCollapse(true)
                       .Title("表格")
                       .ShowHeader(false)
                       .ShowBorder(true)
                       .ID("Grid1")
                       .DataIDField("ID")
                       .DataTextField("UserName")
                       .EnableTextSelection(true)
                       .EnableCheckBoxSelect(true)
                       .EnableMultiSelect(false)
                       .AllowPaging(true)
                       .IsDatabasePaging(true)
                       .AutoScroll(true)
                       .BoxFlex(1)
                       .Listener("paging", "Grid1_DoPostBack();")
                       .PageSize(20)

                       .PageItems(
                           F.ToolbarSeparator()
                              .ID("ToolbarSeparator1"),
                           F.ToolbarText()
                              .ID("ToolbarText1")
                              .Text("每页记录数："),
                           F.DropDownList()
                              .ID("ddlGridPageSize")
                              .Width(80)
                              .Listener("change", "Grid1_DoPostBack();")
                              .SelectedValue("20")
                              .Items(
                                 F.ListItem()
                                   .Text("10")
                                   .Value("10"),
                                 F.ListItem()
                                   .Text("20")
                                   .Value("20"),
                                 F.ListItem()
                                   .Text("50")
                                   .Value("50"),
                                 F.ListItem()
                                   .Text("100")
                                   .Value("100")
                              )
                       )
                       .Columns(
                               F.RowNumberField(),
                               F.RenderField()
                                  .HeaderText("登陆名")
                                  .DataField("UserName")
                                  .Width(150),
                               F.RenderField()
                                  .HeaderText("用户类型")
                                  .DataField("UserTypeName")
                                  .Width(100),
                               F.RenderField()
                                  .HeaderText("所属公司")
                                  .DataField("FCustomerName")
                                  .Width(300),
                               F.RenderField()
                                  .HeaderText("电话")
                                  .Hidden(true)
                                  .DataField("CustomerLevelName")
                                  .Width(100),
                               F.RenderField()
                                  .HeaderText("邮箱")
                                  .DataField("UserMail")
                                  .Width(100),
                               F.RenderField()
                                  .HeaderText("用户状态")
                                  .DataField("EnableName")
                                  .Width(100)
                               )
                               .RecordCount(ViewBag.Grid1RecordCount)
                               .DataSource(ViewBag.Grid1DataSource)
         )
    )
}

@section script {

    <script src="~/res/js/grid.js"></script>

    <script>

        function Grid1_DoPostBack(actionType, actionParams) {
            var params = { type: F.ui.txtUserType.getValue() };

            // 加入扩展参数
            if (actionType) {
                params.actionType = actionType;
            }
            if (actionParams) {
                $.extend(params, actionParams);
            }

            // 触发后台事件
            F.doPostBack('@Url.Action("Grid1_DoPostBack")', 'Panel1', params);
        }

        function onSaveCloseClick(event) {
            var grid = F.ui.Grid1;

            if (!grid.hasSelection()) {
                F.alert('没有选中项！');
                return;
            }

            $.each(grid.getSelectedRows(true), function (index, row) {
                var activeWindow = F.getActiveWindow();
                activeWindow.window.updateUser(row.id, row.text);
                activeWindow.hide();
            })
        }
    </script>
}
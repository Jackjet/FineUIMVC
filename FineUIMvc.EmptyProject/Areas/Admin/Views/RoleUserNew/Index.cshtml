@{
    ViewBag.Title = "RoleUserNew";
    var F = @Html.F();
}

@section body {

    @(F.Panel()
        .ID("Panel1")
        .ShowBorder(false)
        .ShowHeader(false)
        .BodyPadding(10)
        .Layout(LayoutType.Fit)
        .IsViewPort(true)
        .Toolbars(
            F.Toolbar()
                .ID("Toolbar1")
                .Items(
                    F.Button()
                        .ID("btnClose")
                        .Icon(Icon.SystemClose)
                        .Text("关闭")
                        .Listener("click", "F.activeWindow.hide();"),
                    F.ToolbarSeparator(),
                    F.Button()
                        .ID("btnSaveClose")
                        .Icon(Icon.SystemSaveClose)
                        .OnClick(Url.Action("RoleUserNew_btnSaveClose_Click"),
                            new Parameter("selectedRowIds", "F.ui.Grid1.getSelectedRows()"),
                            new Parameter("roleId", "F.ui.roleId.getValue()"))
                        .Text("选择后关闭"),
                    F.ToolbarFill(),
                    F.TwinTriggerBox()
                        .ID("ttbSearchMessage")
                        .Width(180)
                        .ShowLabel(false)
                        .EmptyText("在用户名称中搜索")
                        .Trigger1Icon(TriggerIcon.Clear)
                        .Trigger2Icon(TriggerIcon.Search)
                        .ShowTrigger1(false)
                        .OnTrigger2Click(Url.Action("RoleUserNew_DoPostBack"), "Panel1", new Parameter("actionType", "trigger2", ParameterMode.String))
                        .OnTrigger1Click(Url.Action("RoleUserNew_DoPostBack"), "Panel1", new Parameter("actionType", "trigger1", ParameterMode.String))
                )
        )
        .Items(
            F.HiddenField()
                .ID("roleId")
                .Text(Request.QueryString["roleId"]),
            F.Grid()
                .ID("Grid1")
                .ShowBorder(true)
                .ShowHeader(false)
                .EnableCheckBoxSelect(true)
                .DataIDField("ID")
                .DataTextField("Name")
                .AllowPaging(true)
                .IsDatabasePaging(true)
                .OnPageIndexChanged(Url.Action("RoleUserNew_DoPostBack"), "Panel1")
                .ClearSelectionBeforePaging(false)
                .KeepCurrentSelection(true)
                .KeepPagedSelection(true)
                .Columns(
                     F.RowNumberField(),
                     F.RenderField()
                          .HeaderText("登陆名")
                          .DataField("UserName")
                          .Width(150),
                     F.RenderField()
                          .HeaderText("用户类型")
                          .DataField("UserTypeName")
                          .Width(100),
                     F.RenderField()
                          .HeaderText("所属公司")
                          .DataField("FCustomerName")
                          .Width(300),
                     F.RenderField()
                          .HeaderText("电话")
                          .Hidden(true)
                          .DataField("CustomerLevelName")
                          .Width(100),
                     F.RenderField()
                          .HeaderText("邮箱")
                          .DataField("UserMail")
                          .Width(100),
                     F.RenderField()
                          .HeaderText("用户状态")
                          .DataField("EnableName")
                          .Width(100)
                )
                .PageItems(
                    F.ToolbarSeparator(),
                    F.ToolbarText()
                        .Text("每页记录数："),
                    F.DropDownList()
                        .ID("ddlGridPageSize")
                        .Width(80)
                        .OnSelectedIndexChanged(Url.Action("RoleUserNew_DoPostBack"), "Panel1")
                        .SelectedValue("20")
                        .Items(
                            F.ListItem()
                                .Text("10")
                                .Value("10"),
                            F.ListItem()
                                .Text("20")
                                .Value("20"),
                            F.ListItem()
                                .Text("50")
                                .Value("50"),
                            F.ListItem()
                                .Text("100")
                                .Value("100")
                        )
                )
             .RecordCount(ViewBag.Grid1RecordCount)
             .DataSource(ViewBag.Grid1DataSource)
        )
    )


}


@section script {

    <script>

    </script>
}
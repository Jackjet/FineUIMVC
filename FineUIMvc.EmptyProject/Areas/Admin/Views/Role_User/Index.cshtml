@{
    ViewBag.Title = "Role_User";
    var F = @Html.F();
}

@section body {

    @(F.RegionPanel()
        .ID("RegionPanel1")
        .ShowBorder(false)
        .IsViewPort(true)
        .Regions(
            F.Region()
                .ID("Region1")
                .ShowBorder(false)
                .ShowHeader(false)
                .Width(200)
                .RegionPosition(Position.Left)
                .Layout(LayoutType.Fit)
                .BodyPadding(5)
                .Items(
                    F.Grid()
                        .ID("Grid1")
                        .ShowBorder(true)
                        .ShowHeader(false)
                        .EnableCheckBoxSelect(false)
                        .DataIDField("ID")
                        .DataTextField("Name")
                        .ClearSelectionBeforeSorting(false)
                        .EnableMultiSelect(false)
                        .Listener("rowclick", "RoleUser_Grid2_DoPostBack();")
                        .Toolbars(
                            F.Toolbar()
                                .ID("Toolbar1")
                                .Items(
                                F.TriggerBox()
                                         .ID("ttbSearchCustomer")
                                         .EnableEdit(false)
                                         .LabelWidth(80)
                                         .EmptyText("在所属客户中搜索")
                                         .TriggerIcon(TriggerIcon.Search)
                                         .OnClientTriggerClick("OnClientCustomerSelect();")
                                         .Hidden(ViewBag.Hidden)
                                         .ShowLabel(false)
                                         .Label("客户名称")
                                    //F.TwinTriggerBox()
                                    //    .ID("ttbSearchCustomer")
                                    //    .ShowLabel(false)
                                    //    .Hidden(ViewBag.Hidden)
                                    //    .EmptyText("在所属客户中搜索")
                                    //    .Trigger1Icon(TriggerIcon.Clear)
                                    //    .Trigger2Icon(TriggerIcon.Search)
                                    //    .ShowTrigger1(false)
                                    //    .Listener("trigger1click", "RoleUser_Grid2_DoPostBack('trigger1');")
                                    //    .Listener("trigger2click", "RoleUser_Grid2_DoPostBack('trigger3');")
                                )
                        )
                        .Columns(
                            F.RowNumberField(),
                            F.RenderField()
                                .DataField("Name")
                                .SortField("Name")
                                .ExpandUnusedSpace(true)
                                .HeaderText("角色名称")
                        )
                        .SelectedRowID(ViewBag.Grid1SelectedRowID)
                        .DataSource(ViewBag.Grid1DataSource)

                ),
            F.Region()
                .ID("Region2")
                .ShowBorder(false)
                .ShowHeader(false)
                .RegionPosition(Position.Center)
                .Layout(LayoutType.VBox)
                .BodyPadding("5px 5px 5px 0")
                .Items(
                    F.Form()
                        .ID("Form3")
                        .Height(34)
                        .BodyPadding(5)
                        .ShowHeader(false)
                        .ShowBorder(false)
                        .LabelAlign(LabelAlign.Right)
                        .Rows(
                            F.FormRow()
                                .ID("FormRow2")
                                .Items(
                                    F.TwinTriggerBox()
                                        .ID("ttbSearchMessage")
                                        .ShowLabel(false)
                                        .EmptyText("在用户名称中搜索")
                                        .Trigger1Icon(TriggerIcon.Clear)
                                        .Trigger2Icon(TriggerIcon.Search)
                                        .ShowTrigger1(false)
                                        .Listener("trigger1click", "RoleUser_Grid2_DoPostBack('trigger1');")
                                        .Listener("trigger2click", "RoleUser_Grid2_DoPostBack('trigger2');"),
                                    F.Label()
                                )
                        ),
                    F.Grid()
                        .ID("Grid2")
                        .BoxFlex(1)
                        .ShowBorder(true)
                        .ShowHeader(false)
                        .EnableCheckBoxSelect(true)
                        .DataIDField("UserID")
                        .DataTextField("UserName")
                        .AllowPaging(true)
                        .IsDatabasePaging(true)
                        .Listener("paging", "RoleUser_Grid2_DoPostBack();")
                        .Toolbars(
                            F.Toolbar()
                                .ID("Toolbar1")
                                .Items(
                                    F.Button()
                                        .ID("btnDeleteSelected")
                                        .Icon(Icon.Delete)
                                        .Text("从当前角色移除选中的用户")
                                        .Enabled(ViewBag.CoreRoleUserDelete)
                                        .Listener("click", "onDeleteSelectedClick"),
                                    F.ToolbarFill(),
                                    F.Button()
                                        .ID("btnNew")

@{
    ViewBag.Title = "LoginPage_New";
    var F = @Html.F();
}
@section body {
    @(F.SimpleForm()
         .ID("SimpleForm1")
         .ShowBorder(false)
         .ShowHeader(false)
         .BodyPadding(10)
         .AutoScroll(true)
         .IsViewPort(true)
         .Toolbars(
             F.Toolbar()
                 .Items(
                     F.Button()
                         .ValidateForms("SimpleForm1")
                         .Icon(Icon.SystemSaveClose)
                         .OnClick(Url.Action("btnLoginPageCreate_Click"), "SimpleForm1")
                         .Text("保存")
                 )
         )
         .Items(
                 F.TextBox()
                    .Label("域名")
                    .EmptyText("请输入域名")
                    .ID("tbxHost")
                    .LabelWidth(100)
                    .Required(true)
                    .ShowRedStar(true),
                F.TextBox()
                    .Label("文件夹名称")
                    .EmptyText("请输入文件夹名称")
                    .ID("tbxFileName")
                    .LabelWidth(100)
                    .Required(true)
                    .ShowRedStar(true),
                 F.TextBox()
                    .Label("网站名称")
                    .EmptyText("请输网站名称")
                    .ID("tbxTitle")
                    .LabelWidth(100)
                    .Required(true)
                    .ShowRedStar(true)         
        )
    )
}


@{
    ViewBag.Title = "Index";
    var F = @Html.F();
}

@section body {
    @(F.Panel()
         .ID("Panel1")
         .ShowBorder(false)
         .ShowHeader(false)
         .Margin(5)
         .BodyPadding(5)
         .Layout(LayoutType.VBox)
         .BoxConfigAlign(BoxLayoutAlign.Stretch)
         .IsViewPort(true)
         .Items(
                  F.Form()
                       .ID("Form3")
                       .BodyPadding("5px")
                       .ShowHeader(false)
                       .ShowBorder(false)
                       .LabelAlign(LabelAlign.Left)
                       .Rows(
                          F.FormRow()
                               .ID("FormRow2")
                               .Items(
                                  F.TwinTriggerBox()
                                         .ID("ttbSearchMessage")
                                         .ShowLabel(false)
                                         .EmptyText("在域名中搜索")
                                         .Trigger1Icon(TriggerIcon.Clear)
                                         .Trigger2Icon(TriggerIcon.Search)
                                         .ShowTrigger1(false)
                                         .Listener("trigger1click", "FZ_Grid1_DoPostBack('trigger1');")
                                         .Listener("trigger2click", "FZ_Grid1_DoPostBack('trigger2');"),
                                   F.Label()
                               )
                       ),
                  F.Grid()
                       .EnableCollapse(true)
                       .Title("表格")
                       .ShowHeader(false)
                       .ShowBorder(true)
                       .ID("Grid1")
                       .DataIDField("ID")
                       .EnableTextSelection(true)
                       .EnableCheckBoxSelect(true)
                       .AllowPaging(true)
                       .IsDatabasePaging(true)
                       .AutoScroll(true)
                       .BoxFlex(1)
                       .Listener("paging", "FZ_Grid1_DoPostBack();")
                       .PageSize(20)
                       .Toolbars(
                           F.Toolbar()
                                  .ID("Toolbar1")
                                  .Items(
                                      F.Button()
                                       .ID("btnDeleteSelected")
                                       .Icon(Icon.Delete)
                                       .Text("删除子项")
                                       .Enabled(ViewBag.LoginPageDelete)
                                       .Listener("click", "onDeleteSelectedClick"),
                                      F.ToolbarFill()
                                       .ID("ToolbarFill1"),
                                      F.Button()
                                       .ID("btnNew")
                                       .Icon(Icon.Add)
                                       .Listener("click", "onCreateClick")
                                       .Text("新增登录页")
                                       .Enabled(ViewBag.LoginPageNew)
                                  )
                       )
                       .PageItems(
                           F.ToolbarSeparator()
                              .ID("ToolbarSeparator1"),
                           F.ToolbarText()
                              .ID("ToolbarText1")
                              .Text("每页记录数："),
                           F.DropDownList()
                              .ID("ddlGridPageSize")
                              .Width(80)
                              .Listener("change", "FZ_Grid1_DoPostBack();")
                              .SelectedValue("20")
                              .Items(
                                 F.ListItem()
                                   .Text("10")
                                   .Value("10"),
                                 F.ListItem()
                                   .Text("20")
                                   .Value("20"),
                                 F.ListItem()
                                   .Text("50")
                                   .Value("50"),
                                 F.ListItem()
                                   .Text("100")
                                   .Value("100")
                              )
                       )
                       .Columns(
                               F.RowNumberField(),
                               F.RenderField()
                                    .HeaderText("域名")
                                    .DataField("Host")
                                    .Width(300),
                               F.RenderField()
                                    .HeaderText("文件夹名")
                                    .DataField("FileName")
                                    .Width(150),
                               F.RenderField()
                                    .HeaderText("网站名称")
                                    .DataField("Title")
                                    .Width(300),
                               F.RenderField()
                                    .HeaderText("")
                                    .Width(60)
                                    .RendererFunction("renderEditField")
                                    .TextAlign(TextAlign.Center)
                                    .EnableHeaderMenu(false),
                               F.RenderField()
                                    .HeaderText("")
                                    .Width(60)
                                    .RendererFunction("renderDeleteField")
                                    .TextAlign(TextAlign.Center)
                                    .EnableHeaderMenu(false)
                               )
                               .RecordCount(ViewBag.Grid1RecordCount)
                               .DataSource(ViewBag.Grid1DataSource)
         )
    )



    @(F.Window()
        .ID("Window1")
        .Width(600)
        .Height(300)
        .IsModal(true)
        .Hidden(true)
        .Target(Target.Top)
        .EnableResize(true)
        .EnableMaximize(true)
        .EnableIFrame(true)
        .IFrameUrl(Url.Content("about:blank"))
        .Listener("close", "FZ_Grid1_DoPostBack();")
    )

}

@section script {

    <script src="~/res/js/grid.js"></script>

    <script>
        var CorePumpGDelete = @Convert.ToString(ViewBag.LoginPageDelete).ToLower();
        var CorePumpGEdit = @Convert.ToString(ViewBag.LoginPageEdit).ToLower();
        var CorePumpGNew = @Convert.ToString(ViewBag.LoginPageNew).ToLower();
        function renderPumpField(value, params) {
            var disabledCls = CorePumpGNew ? '' : ' ui-state-disabled';
            return '<a href="javascript:;" class="action-btn pump' + disabledCls + '" ><img class="f-grid-cell-icon" src="@Url.Content("~/res/icon/pencil.png")"></a>';
        }

        function renderDeleteField(value, params) {
            var disabledCls = CorePumpGDelete ? '' : ' ui-state-disabled';
            return '<a href="javascript:;" class="action-btn delete' + disabledCls + '" ><img class="f-grid-cell-icon" src="@Url.Content("~/res/icon/delete.png")"></a>';
        }

        function renderEditField(value, params) {
            var disabledCls = CorePumpGEdit ? '' : ' ui-state-disabled';
            return '<a href="javascript:;" class="action-btn edit' + disabledCls + '"><img class="f-grid-cell-icon" src="@Url.Content("~/res/icon/pencil.png")"></a>';
        }

        function onCreateClick(event) {
            F.ui.Window1.show('@Url.Content("~/Admin/LoginPage/LoginPage_New")', '新增登录页');
        }

        function onDeleteSelectedClick(event) {
            var grid1 = F.ui.Grid1;

            if (!grid1.hasSelection()) {
                F.alert('请至少选择一项！');
                return;
            }

            var selectedRows = grid1.getSelectedRows();
            F.confirm({
                message: '你确定要删除选中的&nbsp;<b>' + selectedRows.length + '</b>&nbsp;行数据吗？',
                target: '_top',
                ok: function () {
                    FZ_Grid1_DoPostBack("delete", {
                        deleteIds: selectedRows
                    });
                }
            });
        }

        function FZ_Grid1_DoPostBack(actionType, actionParams) {
            var params = {};

            // 加入扩展参数
            if (actionType) {
                params.actionType = actionType;
            }
            if (actionParams) {
                $.extend(params, actionParams);
            }

            // 触发后台事件
            F.doPostBack('@Url.Action("FZ_Grid1_DoPostBack")', 'Panel1', params);
        }

        F.ready(function () {

            var grid1 = F.ui.Grid1;
            grid1.el.on('click', 'a.action-btn', function (event) {
                var cnode = $(this);
                var rowData = grid1.getRowData(cnode.closest('.f-grid-row'));

                // 是否禁用
                if (cnode.hasClass('ui-state-disabled')) {
                    return;
                }
                if (cnode.hasClass('delete')) {
                    F.confirm({
                        message: '确定删除此记录？',
                        target: '_top',
                        ok: function () {
                            FZ_Grid1_DoPostBack("delete", {
                                deleteIds: [rowData.id]
                            });
                        }
                    });
                }
                else if (cnode.hasClass('edit')) {
                    F.ui.Window1.show('@Url.Content("~/Admin/LoginPage/LoginPage_Edit")?ID=' + rowData.id, '编辑登录页');
                }
            });
        });
    </script>
}

@{
    ViewBag.Title = "PumpVQ_new";
    var F = @Html.F();
}


@section body {
    @(F.Panel()
        .ID("Panel1")
        .ShowBorder(false)
        .ShowHeader(false)
        .BodyPadding(10)
        .AutoScroll(true)
        .IsViewPort(true)
        .Toolbars(
            F.Toolbar()
                .Items(
                    F.Button()
                        .Icon(Icon.SystemClose)
                        .Text("关闭")
                        .Listener("click", "F.activeWindow.hide();"),
                    F.ToolbarSeparator(),
                    F.Button()
                        .ValidateForms("SimpleForm1")
                        .Icon(Icon.SystemSaveClose)
                        .OnClick(Url.Action("btnVQCreate_Click"), "SimpleForm1")
                        .Text("保存后关闭")
                )
        )
        .Items(
            F.SimpleForm()
                .ID("SimpleForm1")
                .ShowBorder(false)
                .ShowHeader(false)
                .Items(
                        F.DropDownList()
                           .ID("ddlType")
                           .Label("设备")
                           .Required(true)
                           .ShowRedStar(true)
                           .DataTextField("FName")
                           .DataValueField("FValue")
                           .DataSource(ViewBag.ddlTypeDataSource)
                           .SelectedValue("0")
                          .Listener("change", "onddlTypeChange"),
                       F.TextBox()
                        .Label("RTMP")
                        .EmptyText("请输入RTMP")
                        .ID("tbxRtmp")
                        .Required(true)
                        .Hidden(true)
                        .ShowRedStar(true),
                        
                       F.TextBox()
                        .Label("HLS")
                        .EmptyText("请输入HLS")
                        .ID("tbxHls")
                        .Hidden(true)
                        .Required(true)
                        .ShowRedStar(true),
                        F.TextBox()
                           .Label("名称")
                           .EmptyText("请输入名称")
                           .ID("tbxType")
                           .Required(true)
                           .ShowRedStar(true),
                        F.TextBox()
                           .Label("品牌")
                           .EmptyText("请输入品牌名称")
                           .ID("tbxBrand")
                           .Required(true)
                           .ShowRedStar(true),
                        F.TextBox()
                           .Label("型号")
                           .EmptyText("请输入型号名称")
                           .ID("tbxNumber")
                           .Required(true)
                           .ShowRedStar(true),
                       F.TextBox()
                           .Label("IP地址")
                           .EmptyText("请输入IP地址")
                           .ID("tbxIP"),
                        F.NumberBox()
                           .Label("端口")
                           .EmptyText("请输入端口")
                           .ID("tbxPort"),
                        F.TextBox()
                           .Label("用户名")
                           .EmptyText("请输入用户名")
                           .ID("tbxUserName")
                           .Required(true)
                           .ShowRedStar(true),
                        F.TextBox()
                           .Label("密码")
                           .EmptyText("请输入密码")
                           .ID("tbxPassWord")
                           .Required(true)
                           .ShowRedStar(true),
                        F.NumberBox()
                           .Label("排序")
                           .EmptyText("请输入排序号")
                           .ID("tbxFOrderBy")
                           .Required(true)
                           .ShowRedStar(true),
                        F.TextBox()
                           .Label("备注")
                           .EmptyText("")
                           .ID("tbxMark")
                           .ShowRedStar(true),
                        F.HiddenField()
                           .ID("pumpId")
                           .Text(ViewBag.pumpId)
               )
        )
    )

    @(F.Window()
        .ID("Window1")
        .Width(520)
        .Height(500)
        .IsModal(true)
        .Hidden(true)
        .Target(Target.Top)
        .EnableResize(true)
        .EnableMaximize(true)
        .EnableIFrame(true)
        .IFrameUrl(Url.Content("about:blank"))
    )
}

@section script {
    <script>

        function OnClientDTUSelect(event) {
            var url = '@Url.Content("~/OpenWindow/DTUWindow")';
            var openUrl = F.formatString("{0}?DTUId={1}", url, F.urlEncode(F.ui.tbSelectedDTU.getValue()));

            F.ui.Window1.show(openUrl, 'DTU选择', 520, 500);
        }

        function OnClientAddressListSelect(event) {
            var url = '@Url.Content("~/OpenWindow/AddressSchemeWindow")';
            var openUrl = F.formatString("{0}?AddressListId={1}", url, F.urlEncode(F.ui.tbSelectedAddressList.getValue()));

            F.ui.Window1.show(openUrl, '地址表选择', 440, 500);
        }

        function updateDTU(id, text) {
            F.ui.tbSelectedDTU.setValue(text);
            F.ui.hidDTU.setValue(id);
        }

        function updateAddressScheme(id, text) {
            F.ui.tbSelectedAddressList.setValue(text);
            F.ui.hidDZB.setValue(id);
        }
        function onddlTypeChange(event) {
            var ddlType = F.ui.ddlType;
            var tbxRtmp = F.ui.tbxRtmp;
            var tbxHls = F.ui.tbxHls;
         
            if (ddlType.getValue() == "3") {  //管理员
                tbxRtmp.setHidden(false);
                tbxHls.setHidden(false);
            }   
            else { //其他
                tbxRtmp.setHidden(true);
                tbxHls.setHidden(true);
            }

            tbxRtmp.setValue("");
            tbxHls.setValue("");
        }

    </script>
}


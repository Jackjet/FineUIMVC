@{
    ViewBag.Title = "PumpJZ_new";
    var F = @Html.F();
}


@section body {
    @(F.Panel()
        .ID("Panel1")
        .ShowBorder(false)
        .ShowHeader(false)
        .BodyPadding(10)
        .AutoScroll(true)
        .IsViewPort(true)
        .Toolbars(
            F.Toolbar()
                .Items(
                    F.Button()
                        .Icon(Icon.SystemClose)
                        .Text("关闭")
                        .Listener("click", "F.activeWindow.hide();"),
                    F.ToolbarSeparator(),
                    F.Button()
                        .ValidateForms("Panel1")
                        .Icon(Icon.SystemSaveClose)
                                .OnClick(Url.Action("btnJZCreate_Click"), "Panel1", new Parameter("ddlPumpJZArea", "ddlPumpJZArea"))
                        .Text("保存后关闭") ,
                    F.TriggerBox()
                        .ID("tbSelectedDTU")
                        .Hidden(true)
                        .EnableEdit(false)
                        .Required(true)
                        .ShowRedStar(true)
                        .TriggerIcon(TriggerIcon.Search)
                        .OnClientTriggerClick("OnClientDTUSelect();")
                        .Label("机组编号")
                )
        )
        .Items(
             F.GroupPanel()
                .ID("GroupPanel1")
                .Layout(LayoutType.Anchor)
                .Title("配置信息")
                .Items(
                     F.Form()
                         .ID("Form1")
                         .BodyPadding("5 5 0 5")
                         .LabelAlign(LabelAlign.Left)
                         .LabelWidth(100)
                         .ShowHeader(false)
                         .ShowBorder(false)
                         .Rows(
                           F.FormRow()
                              .ID("gp1FormRow1")
                              .Items(
                                  F.TextBox()
                                    .Required(true)
                                    .ShowRedStar(true)
                                    .Label("机组编号")
                                    .EmptyText("请输入机组编号")
                                    .ID("tbSelectedDTU")
                                 .LabelWidth(80),
                                  F.TextBox()
                                     .Label("机组名称")
                                     .EmptyText("请输入机组名称")
                                     .ID("tbxJZName")
                                     .Required(true)
                                     .ShowRedStar(true),
                                  F.DropDownList()
                                     .ID("ddlType")
                                     .Label("设备类型")
                                     .Required(true)
                                     .ShowRedStar(true)
                                     .DataTextField("FName")
                                     .DataValueField("FValue")
                                     .DataSource(ViewBag.ddlTypeDataSource)
                                     .SelectedValue("0")
                              ),
                           F.FormRow()
                              .ID("gp1FormRow2")
                              .Items(
                                 F.DropDownList()
                                    .ID("ddlRunPumpNum")
                                    .Label("主泵泵数")
                                    .SelectedValue("0")
                                    .Items(
                                         F.ListItem()
                                             .Text("0")
                                             .Value("0"),
                                         F.ListItem()
                                             .Text("1")
                                             .Value("1"),
                                         F.ListItem()
                                             .Text("2")
                                             .Value("2"),
                                         F.ListItem()
                                             .Text("3")
                                             .Value("3"),
                                         F.ListItem()
                                             .Text("4")
                                             .Value("4"),
                                         F.ListItem()
                                             .Text("5")
                                             .Value("5"),
                                         F.ListItem()
                                             .Text("6")
                                             .Value("6")
                                         ),
                                 F.DropDownList()
                                    .ID("ddlAuxiliarypumpcount")
                                    .Label("辅泵泵数")
                                    .SelectedValue("0")
                                    .Items(
                                         F.ListItem()
                                             .Text("0")
                                             .Value("0"),
                                         F.ListItem()
                                             .Text("1")
                                             .Value("1"),
                                         F.ListItem()
                                             .Text("2")
                                             .Value("2"),
                                         F.ListItem()
                                             .Text("3")
                                             .Value("3"),
                                         F.ListItem()
                                             .Text("4")
                                             .Value("4"),
                                         F.ListItem()
                                             .Text("5")
                                             .Value("5"),
                                         F.ListItem()
                                             .Text("6")
                                             .Value("6")
                                         ),
                                 F.DropDownList()
                                    .ID("ddlDrainPumpNum")
                                    .Label("排水泵数")
                                    .SelectedValue("0")
                                    .Items(
                                         F.ListItem()
                                             .Text("0")
                                             .Value("0"),
                                         F.ListItem()
                                             .Text("1")
                                             .Value("1"),
                                         F.ListItem()
                                             .Text("2")
                                             .Value("2"),
                                         F.ListItem()
                                             .Text("3")
                                             .Value("3"),
                                         F.ListItem()
                                             .Text("4")
                                             .Value("4"),
                                         F.ListItem()
                                             .Text("5")
                                             .Value("5"),
                                         F.ListItem()
                                             .Text("6")
                                             .Value("6")
                                         )
                              ),
                          F.FormRow()
                              .ID("gp2FormRow2")
                              .Items(
                                 F.NumberBox()
                                    .ID("txt_cjzq")
                                    .MinValue(1)
                                    .Text("1")
                                    .Label("采集周期"),
                                 F.NumberBox()
                                    .ID("txt_cjcd")
                                    .Text("1")
                                    .MinValue(1)
                                    .Label("采集长度"),
                                 F.DropDownList()
                                    .ID("ddlDqms")
                                    .Label("读取模式")
                                    .Required(true)
                                    .ShowRedStar(true)
                                    .DataTextField("FName")
                                    .DataValueField("FValue")
                                    .DataSource(ViewBag.ddlDqmsDataSource)
                                    .SelectedValue("0")
                          ),
                          F.FormRow()
                              .ID("gp2FormRow2")
                              .Items(
                                 F.TextBox()
                                    .ID("txt_sxrj")
                                    .Label("水箱容积"),
                                 F.TextBox()
                                    .ID("txt_jkgj")
                                    .Label("进口管径"),
                                 F.TextBox()
                                    .ID("txt_ctpp")
                                    .Label("成套品牌")
                          ),
                          F.FormRow()
                              .ID("gp2FormRow2")
                              .Items(
                                 F.TextBox()
                                    .ID("txt_sxcc")
                                    .Label("水箱尺寸"),
                                 F.TextBox()
                                    .ID("txt_ckgj")
                                    .Label("出口管径"),
                                 F.TextBox()
                                    .ID("txt_sbpp")
                                    .Label("水泵品牌")
                          ),
                          F.FormRow()
                              .ID("gp2FormRow2")
                              .Items(
                                 F.TextBox()
                                    .ID("txt_zbyc")
                                    .Label("主泵扬程"),
                                 F.TextBox()
                                    .ID("txt_fbyc")
                                    .Label("辅泵扬程"),
                                 F.TextBox()
                                    .ID("txt_fbll")
                                    .Label("辅泵流量")
                          ),
                          F.FormRow()
                              .ID("gp2FormRow2")
                              .Items(
                                 F.TextBox()
                                    .ID("txt_zbgl")
                                    .Label("主泵功率"),
                                 F.TextBox()
                                    .ID("txt_fbgl")
                                    .Label("辅泵功率"),
                                 F.TextBox()
                                    .ID("txt_zbll")
                                    .Label("主泵流量")
                          ),
                          F.FormRow()
                              .ID("gp1FormRow3")
                              .Items(
                                 F.DropDownList()
                                    .ID("ddlPumpJZArea")
                                    .Label("设备分区")
                                    .Required(true)
                                    .ShowRedStar(true)
                                    .DataTextField("FName")
                                    .DataValueField("FValue")
                                    .EnableEdit(true)
                                    .ForceSelection(false)
                                    .DataSource(ViewBag.ddlPumpJZAreaDataSource)
                                    .SelectedValue("0"),
                                 F.TriggerBox()
                                    .ID("tbSelectedAddressList")
                                    .EnableEdit(false)
                                    .Required(true)
                                    .ShowRedStar(true)
                                    .TriggerIcon(TriggerIcon.Search)
                                    .OnClientTriggerClick("OnClientAddressListSelect();")
                                    .Label("地址方案"),
                                 F.DropDownList()
                                    .ID("ddlZHFType")
                                    .Label("止回阀类型")
                                    //.Required(true)
                                    //.ShowRedStar(true)
                                    .DataTextField("FName")
                                    .DataValueField("FValue")
                                    .DataSource(ViewBag.ddlZHFTypeDataSource)
                                    .SelectedValue("0")
                              ),
                          F.FormRow()
                              .ID("gp2FormRow2")
                              .Items(
                              F.CheckBox()
                                    .ID("cboOpenMessage")
                                    .Label("开启短信通知")
                                    .ShowLabel(true),
                              F.CheckBox()
                                    .ID("cboYNJYF")
                                    .Label("有无减压阀")
                                    .ShowLabel(true),
                              F.CheckBox()
                                    .ID("cboYNTFGN")
                                    .Label("有无调峰功能")
                                    .ShowLabel(true)
                          ),
                           F.FormRow()
                              .ID("gp1FormRow")
                              .Items(
                                 F.HiddenField()
                                    .Label("DTU")
                                    .ID("hidDTU"),
                                 F.HiddenField()
                                    .Label("地址表")
                                    .ID("hidDZB"),
                                 F.HiddenField()
                                    .ID("pumpId")
                                    .Text(ViewBag.pumpId) 
                              )
                         )
                ),
                    F.GroupPanel()
                        .ID("GroupPanel2")
                        .Layout(LayoutType.Anchor)
                        .Title("限定设置")
                        .Items(
                           F.Form()
                               .ID("Form2")
                               .BodyPadding("5 5 0 5")
                               .LabelAlign(LabelAlign.Left)
                               .LabelWidth(100)
                               .ShowHeader(false)
                               .ShowBorder(false)
                               .Rows(
                                    F.FormRow()
                                        .ID("gp2FormRow1")
                                        .Items(
                                            F.NumberBox()
                                                .ID("txt_jsS")
                                                .MinValue(0)
                                                .Text("0")
                                                .Label("进水压力上限"),
                                            F.NumberBox()
                                                .ID("txt_jsX")
                                                .Text("0")
                                                .MinValue(0)
                                                .Label("进水压力下限"),
                                            F.NumberBox()
                                                .ID("txt_csS")
                                                .Text("0")
                                                .MinValue(0)
                                                .Label("出水压力上限"),
                                            F.NumberBox()
                                                .ID("txt_csX")
                                                .Text("0")
                                                .MinValue(0)
                                                .Label("出水压力下限")
                                        ),
                                    F.FormRow()
                                        .ID("gp2FormRow2")
                                        .Items(
                                            F.NumberBox()
                                                .ID("txt_ylS")
                                                .Text("0")
                                                .MinValue(0)
                                                .Label("余氯值上限"),
                                            F.NumberBox()
                                                .ID("txt_ylX")
                                                .Text("0")
                                                .MinValue(0)
                                                .Label("余氯值下限"),
                                            F.NumberBox()
                                                .ID("txt_zdS")
                                                .Text("0")
                                                .MinValue(0)
                                                .Label("浊度值上限"),
                                            F.NumberBox()
                                                .ID("txt_zdX")
                                                .Text("0")
                                                .MinValue(0)
                                                .Label("浊度值下限")
                                        ),
                                    F.FormRow()
                                        .ID("gp2FormRow3")
                                        .Items(
                                            F.NumberBox()
                                                 .ID("txt_phS")
                                                 .Text("0")
                                                 .MinValue(0)
                                                 .Label("PH值上限"),
                                            F.NumberBox()
                                                .ID("txt_phX")
                                                .Text("0")
                                                .MinValue(0)
                                                .Label("PH值下限"),
                                            F.NumberBox()
                                                .ID("txt_sxS")
                                                .Text("0")
                                                .MinValue(0)
                                                .Label("水箱上限"),
                                            F.NumberBox()
                                                .ID("txt_sxX")
                                                .Text("0")
                                                .MinValue(0)
                                                .Label("水箱下限")
                                        )
                                  )
                      )
        )
    )
    
    @(F.Window()
        .ID("Window1")
        .Width(520)
        .Height(500)
        .IsModal(true)
        .Hidden(true)
        .Target(Target.Top)
        .EnableResize(true)
        .EnableMaximize(true)
        .EnableIFrame(true)
        .IFrameUrl(Url.Content("about:blank"))
    )
}

@section script {
    <script>

        function OnClientDTUSelect(event) {
            var url = '@Url.Content("~/OpenWindow/DTUWindow")';
            var openUrl = F.formatString("{0}?DTUId={1}", url, F.urlEncode(F.ui.tbSelectedDTU.getValue()));

            F.ui.Window1.show(openUrl, 'DTU选择', 520, 500);
        }

        function OnClientAddressListSelect(event) {
            var url = '@Url.Content("~/OpenWindow/AddressSchemeWindow")';
            var openUrl = F.formatString("{0}?id=1&AddressListId={1}", url, F.urlEncode(F.ui.tbSelectedAddressList.getValue()));

            F.ui.Window1.show(openUrl, '地址方案选择', 700, 500);
        }

        function updateDTU(id, text) {
            F.ui.tbSelectedDTU.setValue(text);
            F.ui.hidDTU.setValue(id);
        }

        function updateAddressScheme(id, text) {
            F.ui.tbSelectedAddressList.setValue(text);
            F.ui.hidDZB.setValue(id);
        }

    </script>
}

@{
    ViewBag.Title = "CustomerUrl_edit";
    var F = @Html.F();
}

@model FineUIMvc.PumpMVC.Models.Panda_CustomerTopMenu

@section body {

    @(F.SimpleForm()
                .ID("SimpleForm1")
                .ShowBorder(false)
                .ShowHeader(false)
                .BodyPadding(10)
                .AutoScroll(true)
                .IsViewPort(true)
                .Toolbars(
                    F.Toolbar()
                        .Items(
                            F.Button()
                                .Icon(Icon.SystemClose)
                                .Text("关闭")
                                .Listener("click", "F.activeWindow.hide();"),
                            F.ToolbarSeparator(),
                            F.Button()
                                .ValidateForms("SimpleForm1")
                                .Icon(Icon.SystemSaveClose)
                                .OnClick(Url.Action("btnUrlEdit_Click"), "SimpleForm1")
                                .Text("保存后关闭")
                        )
                )
                .Items(
                    F.HiddenFieldFor(x => x.ID)
                       .ID("tbxID"),
                    F.DropDownListFor(x => x.TopMenuID)
                       .ID("ddlTopMenuID")
                       .Label("系统名称")
                       .Required(true)
                       .ShowRedStar(true)
                       .DataTextField("FName")
                       .DataValueField("FValue")
                       .DataSource(ViewBag.ddlTypeDataSource)
                       .Enabled(false),
                    F.TextBoxFor(x => x.NavigateUrl)
                       .Label("系统地址")
                       .EmptyText("请输入系统地址")
                               .ID("tbxNavigateUrl")
                       .Required(true)
                       .ShowRedStar(true)
               )
    )
@(F.Window()
        .ID("Window1")
        .Width(700)
        .Height(500)
        .IsModal(true)
        .Hidden(true)
        .Target(Target.Top)
        .EnableResize(true)
        .EnableMaximize(true)
        .EnableIFrame(true)
        .IFrameUrl(Url.Content("about:blank"))
)
}
@section script {
    <script>

    </script>
}
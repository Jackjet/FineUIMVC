                        ),
                    F.FormRow()
                        .ID("FormRow6")
                        .Items(
                            F.TextBox()
                                .ID("txt_time")
                                .Label("采集时间")
                                .Text(ViewBag.txt_time)
                        ),
                    F.FormRow()
                        .ID("FormRow7")
                        .Items(
                            F.TextBox()
                                .ID("txt_jinchuWat")
